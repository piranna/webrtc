pipeline {
    agent {
        dockerfile {
            dir { 'ATOS-Integration/Dockerfile.builder' }
        }

    stages {
        stage('Import dependencies') {
            steps {
                sh 'fetch --nohooks webrtc_android'
                sh 'gsync sync'
                sh 'cd src'
                sh './build/install-build-deps.sh'
                sh 'gclient revert'
                sh 'gclient sync'
                sh 'tools_webrtc/android/build_aar.py'
            }
        }
    }
}
